<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	
	<context:component-scan base-package="org.command4spring.sample.service"></context:component-scan>
	
	<bean id="serializer" class="org.command4spring.xml.serializer.XmlSerializer" />
	<bean id="dispatcher" class="org.command4spring.dispatcher.InVmDispatcher"></bean>
	<bean class="org.command4spring.remote.receiver.DefaultCommandReceiver">
		<constructor-arg ref="serializer" />
		<constructor-arg ref="dispatcher" />
	</bean>

</beans>
