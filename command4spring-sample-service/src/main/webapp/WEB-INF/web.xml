<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0">
	<display-name>Archetype Created Web Application</display-name>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>CommandReceiverServlet</servlet-name>
		<servlet-class>org.command4spring.spring.remote.http.receiver.SpringCommandReceiverSerlvet</servlet-class>
		<init-param>
			<param-name>command_receiver</param-name>
			<param-value>commandReceiver</param-value>
		</init-param>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommandReceiverServlet</servlet-name>
		<url-pattern>/execute/*</url-pattern>
	</servlet-mapping>
</web-app>
